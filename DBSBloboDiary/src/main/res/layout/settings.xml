<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Minimum"
            android:id="@+id/tvSettingsMinimum"
            android:layout_gravity="left|center_vertical"
            android:textSize="@dimen/textview_font_size" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etSettingsMinimum"
            android:layout_gravity="left|center_vertical"
            android:numeric="integer"
            android:inputType="number"
            android:textSize="@dimen/textview_font_size" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_gravity="left|center_vertical"
            android:layout_height="2dip"
            android:background="#FF525252"
            ></LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Maximum"
            android:id="@+id/tvSettingsMaximum"
            android:layout_gravity="left|center_vertical"
            android:paddingTop="10dp"
            android:textSize="@dimen/textview_font_size" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etSettingsMaximum"
            android:layout_gravity="left|center_vertical"
            android:numeric="integer"
            android:inputType="number"
            android:textSize="@dimen/textview_font_size" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_gravity="left|center_vertical"
            android:layout_height="2dip"
            android:background="#FF525252"
            ></LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Threshold"
            android:id="@+id/tvSettingsThreshold"
            android:layout_gravity="left|center_vertical"
            android:paddingTop="10dp"
            android:textSize="@dimen/textview_font_size" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etSettingsThreshold"
            android:layout_gravity="left|center_vertical"
            android:numeric="integer"
            android:inputType="number"
            android:textSize="@dimen/textview_font_size" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/bSettingsSave"
                android:textSize="@dimen/textview_font_size" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
