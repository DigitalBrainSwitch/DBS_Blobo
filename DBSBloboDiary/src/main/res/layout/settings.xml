<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SettingsActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:id="@+id/llSettingsCalTestTopLine"
                android:background="@color/light_gray"
                android:layout_height="2dip" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingTop="10dp"
                android:paddingBottom="20dp">

                <Switch
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Calibration Test"
                    android:id="@+id/sCalibrationTest"
                    android:layout_gravity="left|center_vertical"
                    android:paddingTop="10dp"
                    android:textSize="@dimen/textview_font_size"
                    android:textColor="@color/gray"
                    android:button="@color/yellow_8"
                    android:checked="false" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:id="@+id/llSettingsCalTestBottomLine"
                android:background="@color/light_gray"
                android:layout_height="2dip" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Sensitivity"
                    android:id="@+id/tvSettingsSensitivity"
                    android:layout_gravity="left|center_vertical"
                    android:paddingTop="10dp"
                    android:textSize="@dimen/textview_font_size"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etSettingsSensitivity"
                    android:layout_gravity="left|center_vertical"
                    android:numeric="integer"
                    android:inputType="number"
                    android:textSize="@dimen/textview_font_size"
                    android:layout_weight="0.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Calibration"
                    android:id="@+id/tvSettingsThreshold"
                    android:layout_gravity="left|center_vertical"
                    android:paddingTop="10dp"
                    android:textSize="@dimen/textview_font_size"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etSettingsThreshold"
                    android:layout_gravity="left|center_vertical"
                    android:numeric="integer"
                    android:inputType="number"
                    android:textSize="@dimen/textview_font_size"
                    android:layout_weight="0.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Long Squeeze Duration (sec)"
                    android:id="@+id/tvSettingsLongSqueezeDuration"
                    android:layout_gravity="left|center_vertical"
                    android:paddingTop="10dp"
                    android:textSize="@dimen/textview_font_size"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etSettingsLongSqueezeDuration"
                    android:layout_gravity="left|center_vertical"
                    android:numeric="integer"
                    android:inputType="number"
                    android:textSize="@dimen/textview_font_size"
                    android:layout_weight="2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="20dp">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_gray"
                    android:text="Cancel"
                    android:id="@+id/bSettingsCancel"
                    android:textSize="@dimen/textview_font_size"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/dbs_blue"
                    android:textColor="@android:color/white"
                    android:text="Save"
                    android:id="@+id/bSettingsSave"
                    android:textSize="@dimen/textview_font_size"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
